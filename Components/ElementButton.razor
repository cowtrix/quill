@using Squill.Data;

@{
    var type = Type.GetType(Element.Type);
}

<MudItem>
    <MudPaper Width="250px" Height="150px" Style="@($"outline: 1px solid {type.GetColor()};")">
        <MudCardContent>
            <MudStack Row=true >
                <MudIcon Icon="@type?.GetIcon()" Style="@($"color: {type.GetColor()};")" />
                <MudText>@Element.Name</MudText>
            </MudStack>
            <MudText Style="@($"color: {type.GetColor()};")" Typo="Typo.subtitle2">@(type?.GetName())</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudIconButton OnClick="() => TabManager.AddTab(Element)" Icon="@Icons.Material.Filled.OpenInNew" />
        </MudCardActions>
    </MudPaper>
</MudItem>

    @code {
    [Parameter]
    public ElementMetaData Element { get; set; }

    [Parameter]
    public Squill.Components.TabManager TabManager { get; set; }
}
